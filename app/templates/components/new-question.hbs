
{{#if showQuestionForm}}
  <form>
    <div class="form-group">
      <label for="author">User</label>
      {{input value=author id='author'}}
    </div>
    <div class="form-group">
      <label for="body">Question</label>
      {{input value=body id='body'}}
    </div>
    <div class="form-group">
      <label for="notes">Notes</label>
      {{input value=notes id='notes'}}
    </div>
    <button {{action 'newQuestion'}}>Add Question</button>
  </form>
{{else}}
  <button {{action 'showForm'}}>Ask A Question</button>
{{/if}}
